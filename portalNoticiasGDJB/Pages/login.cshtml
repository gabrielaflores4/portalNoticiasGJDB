@page
@model loginModel
@{
    ViewData["Title"] = "Iniciar Sesion";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 96px;
            max-width: 800px;
            width: 100%;
            margin: auto;
        }

        label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
            font-weight: 500;
        }

        input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn {
            background-color: #0F2A1D;
            color: white;
            padding: 10px;
            border: none;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
        }

        .btn-custom {
            background-color: #0F2A1D !important;
            border-color: #0F2A1D !important;
        }

            .btn-custom:hover {
                background-color: #6B9071 !important;
            }

        .btn:hover {
            background-color: #6B9071;
        }

        .link {
            margin-top: 20px;
        }

            .link a {
                color: #6B9071;
                text-decoration: none;
            }

                .link a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            display: block;
            text-align: left;
            color: #dc3545;
            font-size: 0.875em;
            margin-top: -5px;
            margin-bottom: 10px;
        }
    </style>
</head>
    <body>
        <div class="container">
            <h2>Iniciar Sesión</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <label asp-for="Input.UserName">Usuario:</label>
                <input asp-for="Input.UserName" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>

                <label asp-for="Input.Password">Contraseña:</label>
                <input asp-for="Input.Password" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <button type="submit" class="btn">Entrar</button>
            </form>

            <div class="link">
                <p>¿No tienes una cuenta? <a asp-page="/SignUp">Regístrate aquí</a></p>
            </div>
        </div>
    </body>
</html>