@page
@model portalNoticiasGDJB.Pages.SignUpModel
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body class=" Rbody">
    <div class="Rcontainer">
        <h2>Registro de Usuario</h2>
        <form method="post">
            <label asp-for="Input.UserName">Nombre:</label>
            <input asp-for="Input.UserName" />

            <label asp-for="Input.Email">Correo Electrónico:</label>
            <input asp-for="Input.Email" />

            <label asp-for="Input.Password">Contraseña:</label>
            <input asp-for="Input.Password" type="password" />

            <label asp-for="Input.ConfirmPassword">Confirmar Contraseña:</label>
            <input asp-for="Input.ConfirmPassword" type="password" />

            <button type="submit" class="Rbtn">Registrarse</button>
        </form>
       
        <div class="link">
            <p>¿Ya tienes una cuenta? <a asp-page="/login">Inicia sesión aquí</a></p>
        </div>
    </div>
    <script src="~/js/validaciones.js"></script>
</body>
</html>
