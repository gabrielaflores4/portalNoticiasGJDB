@page
@model portalNoticiasGDJB.Pages.SignUpModel
@{
    ViewData["Title"] = "Registro";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
            margin: 0;
        }

        .Rcontainer {
            background: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: auto;
            max-width: 800px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .Rbtn {
            background-color: #0F2A1D;
            color: white;
            padding: 10px;
            border: none;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-custom {
            background-color: #0F2A1D !important;
            border-color: #0F2A1D !important;
        }

            .btn-custom:hover {
                background-color: #6B9071 !important;
            }

        .Rbtn:hover {
            background-color: #6B9071;
        }

        .link {
            margin-top: 10px;
            text-align: center;
        }

            .link a {
                color: #6B9071;
                text-decoration: none;
            }

                .link a:hover {
                    text-decoration: underline;
                }

        label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .text-danger {
            display: block;
            text-align: left;
            color: #dc3545;
            font-size: 0.875em;
            margin-top: -5px;
            margin-bottom: 10px;
        }

        .form-content {
            width: 100%;
            max-width: 400px;
        }
    </style>

</head>
<body>
    <div class="Rcontainer">
        <h2>Registro de Usuario</h2>

        <div class="form-content">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <label asp-for="Input.UserName">Nombre:</label>
                <input asp-for="Input.UserName" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>

                <label asp-for="Input.Email">Correo Electrónico:</label>
                <input asp-for="Input.Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <label asp-for="Input.Password">Contraseña:</label>
                <input asp-for="Input.Password" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <label asp-for="Input.ConfirmPassword">Confirmar Contraseña:</label>
                <input asp-for="Input.ConfirmPassword" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <button type="submit" class="Rbtn">Registrarse</button>
            </form>

            <div class="link">
                <p>¿Ya tienes una cuenta? <a asp-page="/Login">Inicia sesión aquí</a></p>
            </div>
        </div>
    </div>
</body>
</html>